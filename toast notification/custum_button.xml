<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!-- Button's for simple and custom Toast -->
    <Button
        android:id="@+id/simpleToast"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="#f00"
        android:text="Simple Notification"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/customToast2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simpleToast"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:background="#48cae4"
        android:text="Notification with an image"
        android:textColor="#fff"
        android:radius="11dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/customToast3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customToast2"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:layout_marginTop="74dp"
        android:background="#48cae4"
        android:radius="11dp"
        android:text="Fast Notification"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/customToast4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customToast3"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:background="#48cae4"
        android:text="Other"
        android:textColor="#fff"
        android:radius="11dp"
        android:textSize="20sp" />


</RelativeLayout>